<body>


<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar">
				<div class="p-4 pt-5">
		  		<a href="#" class="img logo rounded-circle mb-5" style="background-image: url(https://us.123rf.com/450wm/arbuzu/arbuzu1607/arbuzu160700095/60765606-letter-f-heart-icon-design-template-elements.jpg?ver=6);"></a>
	        <ul class="list-unstyled components mb-5">
            <li>
              <a href="#">My Profile</a>
          </li>
	          <li>
	              <%= link_to "All Users", users_path %>
            </li>
            <li>
              <a href="#">Messages</a>
          </li>
	          <li>
              <a href="#">My Reviews</a>
	          </li>
            <li>
            <% if @current_user.id == params[:id].to_i %>
                <%= link_to "Logout", {:controller=> 'sessions', :action=> "destroy"}, :method=> :delete%><br>
            <% end%>
            </li>
	        </ul>

	      </div>
    	</nav>

        <!-- Page Content  -->
      <div id="content" >


      <div class="mainpage">
<h1> Edit Your Profile </h1><br>
<%= form_for @user do |f| %>

<%= f.label :name %>: 
<%= f.text_field :name %><br>

<%= f.label :age %>:
<%= f.number_field :age %><br>

<%= f.label :bio %>:
<%= f.text_area :bio %><br>

<%= f.label :favourite_food %>:
<%= f.select :food_choice, options_for_select = {"Italian" => 1, "Chinese" => 2, "Mexican" => 3, "Thai" => 4, "Indian" => 5, "Japanese or Sushi" => 6, "Mediterranean" => 7, "Other" => 8}, :class => 'genForm_dropBox' %> </br>

<%= f.label :are_you_looking_for_love_or_friendship? %> Tick the box for Love:
<%= f.check_box :love_choice %> <br />

<%= f.label :change_password%>:
<%= f.password_field :password%><br>

<%= f.label :password_confirmation %>:
<%= f.password_field :password_confirmation %>

<br>
<%= f.submit "Update your Profile" %>
    <% end%>  

    <% if @user.errors.any? %>
  <ul>
    <% @user.errors.full_messages.each do |e| %>
      <li style="color:red;"><%= e %></li>
    <% end %>
  </ul>
<% end %>
</div>

