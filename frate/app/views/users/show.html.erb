    <title>Frate</title>
</head>
 
<body>

 <% if @current_user.id == params[:id].to_i%>
<h1>Hey <%= @current_user.name %>!</h1>
<% else %> 
<h1><%= @user.name %>'s Profile</h1>
<% end %>



<h2><%= @user.name %>'s matches: </h2>
<% @users.each do |user| %>
  <% if user.love_choice == @user.love_choice %>
  <% if user.food_choice == @user.food_choice %>
    <% if @user != user %>
      <li>
    <%= (link_to user.name, user)%>
      </li>
    <% end%>
  <% end%>
<% end %>
<% end %>


<% if @current_user.id == params[:id].to_i%>
<h1>Hey <%= @user.name %>!</h1>
<h2>If you feel like we were wrong, make new friends here!: </h2>
  <% @not_friending.each do |user| %> 
     <% if user.id != @user.id %>       
        <li>
     <%= (link_to user.name, user) %>
       <%= form_for user, url: { action: "update" } do |f|  %>
      <%= f.hidden_field :name %>
      <%= f.submit "Add friend" %>
        </li>
    <% end %>  
  <% end %>
  <% end %>
  
  <%else%>
  <h1><%= @user.name %>!</h1>
  </br> <%= link_to("My Profile", @current_user, method: :get, class: "btn btn-primary btn-lg") %>
<% end %>
<br>
<%= link_to "All Users", users_path, class: "btn btn-secondary btn-lg" %><br>

<% if @current_user.id == params[:id].to_i %>
  <%= link_to "Delete account", user_path, method: "DELETE" %>
<% end %>



